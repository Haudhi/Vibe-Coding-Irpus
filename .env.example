# GA Ticketing System Environment Configuration

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ga_ticketing
DB_USER=ga_user
DB_PASSWORD=ga_password
DB_SSLMODE=disable
DB_MAX_CONNECTIONS=50
DB_MAX_IDLE_CONNECTIONS=10
DB_MAX_CONNECTION_LIFETIME=3600s

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s
SERVER_IDLE_TIMEOUT=60s

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=168h

# OAuth2 Configuration
OAUTH2_CLIENT_ID=your-oauth2-client-id
OAUTH2_CLIENT_SECRET=your-oauth2-client-secret
OAUTH2_REDIRECT_URL=http://localhost:8080/auth/callback
OAUTH2_AUTH_URL=https://your-oauth2-provider.com/oauth2/authorize
OAUTH2_TOKEN_URL=https://your-oauth2-provider.com/oauth2/token

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# Application Configuration
APP_NAME=GA Ticketing System
APP_VERSION=1.0.0
APP_ENV=development

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=200

# Performance Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_PROFILING=false

# Email Configuration (for notifications)
SMTP_HOST=smtp.company.com
SMTP_PORT=587
SMTP_USERNAME=ga-notifications@company.com
SMTP_PASSWORD=smtp-password
SMTP_FROM_EMAIL=GA Ticketing System <ga@company.com>

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Security
BCRYPT_COST=12
SESSION_SECRET=your-session-secret-change-this
CSRF_SECRET=your-csrf-secret-change-this

# Testing
TEST_DB_NAME=ga_ticketing_test
TEST_REDIS_DB=1